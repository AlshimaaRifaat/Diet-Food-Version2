        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#04954c"
        android:textStyle="bold"
        android:text="سنبحث لك عن الأفضل!"
        android:textSize="@dimen/_17sdp"
        android:layout_marginTop="@dimen/_44sdp"
        android:layout_below="@+id/splash_image_logo"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/splash_text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="احصل على المتعه مع افضل الأطعمة الصحية وجعل حياتك صحية! "
        android:textSize="@dimen/_15sdp"
        android:textColor="#797b79"
        android:layout_marginTop="@dimen/_17sdp"
        android:layout_below="@+id/item_view_pager_text_name"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/_33sdp"
        android:layout_marginRight="@dimen/_33sdp"
        />
