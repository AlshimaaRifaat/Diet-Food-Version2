<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">

    <ImageView
        android:id="@+id/row_prod_family_image"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_140sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        android:background="#a99d9d"
        android:src="@drawable/business"
        android:layout_alignParentLeft="true"
        android:scaleType="fitXY"
        />

    <RelativeLayout
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_49sdp"
        android:layout_marginTop="@dimen/_92sdp"
        android:layout_alignParentLeft="true"
        android:alpha=".7"
        android:background="#FF4B5157">

        <TextView
            android:id="@+id/row_prod_family_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_3sdp"
            android:text="سلطه خضراء"
            android:textColor="#fff"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/row_prod_family_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_prod_family_title"
            android:layout_marginRight="@dimen/_3sdp"
            android:text="50 dollar"
            android:textSize="@dimen/_12sdp"
            android:textColor="#fff"
            android:layout_alignParentRight="true"
           />
    </RelativeLayout>


</RelativeLayout>